#!/bin/bash

if ! command -v op >/dev/null
then
  echo "Install op first!" >&2
  exit 1
fi

if [ -f "$HOME/$2" ]
then
  echo "$2 already exists."
  exit 1
fi

if [ -z "$OP_SESSION_my" ]
then
  echo "Logging into 1Password..."
  export OP_SESSION_my=$(op_login)
fi

echo "Extracting $2..."
op get document "$1" > "$HOME/$2"
chmod 600 "$HOME/$2"
